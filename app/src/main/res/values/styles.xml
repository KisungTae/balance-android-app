<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/Accent</item>
        <item name="android:textColor">@color/TextBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:statusBarColor">@color/BackgroundWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>-->
        <!--        <item name="badgeStyle">@style/CustomBottomSheetDialog</item>        -->
    </style>


    <style name="Theme.App.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/Primary</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.App.Dialog.PrimaryFullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/Primary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/Primary</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@color/Primary</item>
    </style>
    
    <style name="MyAppTheme.NumberPicker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/Grey</item>
    </style>


    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">3.0dip</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/Primary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>


</resources>