<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_top_round_box"
        android:backgroundTint="@color/BackgroundWhite"
        android:paddingTop="20dp"
        android:text="@string/swipe_filter_dialog_title"
        android:textAlignment="center"
        android:textSize="@dimen/text_large_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BackgroundWhite"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp">

        <RadioGroup
            android:id="@+id/rgSwipeFilterGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/BackgroundWhite"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbSwipeFilterMale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/st_radio_button_left"
                android:button="@color/Transparent"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="@string/swipe_filter_dialog_radio_button_male_title"
                android:textColor="@color/radio_button_text" />


            <RadioButton
                android:id="@+id/rbSwipeFilterFemale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/st_radio_button_right"
                android:button="@color/Transparent"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="@string/swipe_filter_dialog_radio_button_female_title"
                android:textColor="@color/radio_button_text" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상대방 나이는 " />

            <TextView
                android:id="@+id/tvSwipeFilterMinAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 에서 " />

            <TextView
                android:id="@+id/tvSwipeFilterMaxAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 까지 볼래요" />

        </LinearLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rsSwipeFilterAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:valueFrom="20"
            android:valueTo="100" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSwipeFilterDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 까지 떨어진 상대방을 볼래요" />

        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderSwipeFilterDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:valueFrom="1"
            android:valueTo="10" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_bottom_round_box"
        android:backgroundTint="@color/BackgroundWhite"
        android:gravity="center">

        <Button
            android:id="@+id/btnSwipeFilterClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE" />

    </LinearLayout>


</LinearLayout>