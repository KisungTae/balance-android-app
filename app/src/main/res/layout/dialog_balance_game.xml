<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundWhite"
    android:orientation="vertical">

    <com.beeswork.balance.ui.common.GradientTextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="@string/balance_game_dialog_title"
        android:textAlignment="center"
        android:textSize="@dimen/tool_bar_title_large_text_size"
        android:textStyle="bold"
        app:endColor="@color/TextWhite"
        app:startColor="@color/Primary" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        android:paddingBottom="50dp">

        <LinearLayout
            android:id="@+id/llBalanceGameWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btnBalanceGameTopOption"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/sh_top_round_box"
                android:textColor="@color/TextWhite"
                android:textSize="@dimen/text_large_size" />

            <Button
                android:id="@+id/btnBalanceGameBottomOption"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/sh_round_box_border"
                android:textColor="@color/Primary"
                android:textSize="@dimen/text_large_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBalanceGameLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.github.ybq.android.spinkit.SpinKitView
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="@dimen/spin_kit_medium_size"
                android:layout_height="@dimen/spin_kit_medium_size"
                android:layout_marginBottom="10dp"
                android:background="@color/Transparent"
                app:SpinKit_Color="@color/Primary" />

            <TextView
                android:id="@+id/tvLoadingMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/TextGrey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBalanceGameError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/dialog_error_icon_description"
                android:src="@drawable/ic_baseline_error_outline" />

            <TextView
                android:id="@+id/tvBalanceGameDialogErrorTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvBalanceGameDialogErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="center"
                android:textColor="@color/TextGrey" />

            <Button
                android:id="@+id/btnBalanceGameDialogFetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sh_round_box"
                android:text="@string/dialog_retry_btn_text"
                android:textColor="@color/TextWhite"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnBalanceGameDialogSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sh_round_box"
                android:text="@string/dialog_retry_btn_text"
                android:textColor="@color/TextWhite"
                android:visibility="gone" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnBalanceGameDialogErrorClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textColor="@color/Primary"
                android:text="@string/dialog_close_btn_title" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBalanceGameDialogMissed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/balance_game_retry_icon_description"
                android:src="@drawable/ic_refresh"
                app:tint="@color/Primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/balance_game_missed_text"
                android:textAlignment="center"
                android:textColor="@color/TextBlack" />

            <Button
                android:id="@+id/btnBalanceGameRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/sh_round_box"
                android:text="@string/dialog_retry_btn_text"
                android:textColor="@color/TextWhite" />

            <Button
                android:id="@+id/btnBalanceGameDialogMissedClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:text="@string/balance_game_keep_swiping_btn_text"
                android:textColor="@color/Primary" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBalanceGameClicked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivBalanceGameClickedProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/swipe_profile_photo_description"
                android:src="@drawable/person4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="상대방 취향에 클릭!"
                android:textAlignment="center"
                android:textSize="@dimen/text_large_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="상대방도 내 취향에 곧 클릭할거에요"
                android:textAlignment="center"
                android:textColor="@color/TextBlack" />

            <Button
                android:id="@+id/btnBalanceGameClickedClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:text="@string/balance_game_keep_swiping_btn_text"
                android:textColor="@color/Primary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBalanceGameDialogMatched"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="matched layout" />

        </LinearLayout>
    </FrameLayout>


</LinearLayout>
