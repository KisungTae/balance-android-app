<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/skvChatMessageSentLoading"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:alpha="1"
                android:background="@color/Transparent"
                android:clickable="true"
                app:SpinKit_Color="@color/Accent"
                android:focusable="true"
                android:tag="photoPickerLoading"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/llChatMessageSentErrorOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_marginEnd="3dp"
                    android:id="@+id/btnChatMessageSentResend"
                    android:layout_width="@dimen/chat_message_menu_btn_size"
                    android:layout_height="@dimen/chat_message_menu_btn_size"
                    android:background="@drawable/ic_baseline_refresh"
                    android:contentDescription="@string/chat_message_resend_description" />

                <ImageButton
                    android:layout_marginEnd="3dp"
                    android:id="@+id/btnChatMessageSentDelete"
                    android:layout_width="@dimen/chat_message_menu_btn_size"
                    android:layout_height="@dimen/chat_message_menu_btn_size"
                    android:background="@drawable/ic_baseline_close"
                    android:contentDescription="@string/delete_chat_message_description" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvChatMessageSentCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvChatMessageSentBody"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/sh_rectangle_border"
            android:padding="10dp"
            android:text="this is messafdfsafdsfdsfdsfdsfdsafafdsfdsaffdsfdsafdsfge here" />

    </LinearLayout>


</LinearLayout>