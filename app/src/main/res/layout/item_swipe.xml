<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/Primary">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintDimensionRatio="H,1:1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSwipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/swipe_profile_photo_image_view_description" />

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivSwipeLikedIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_thumb_up_off_alt_24"
                android:contentDescription="@string/swipe_liked_icon" />

            <ImageView
                android:id="@+id/ivSwipeClickedIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_thumb_up_alt_24"
                android:contentDescription="@string/swipe_clicked_icon" />

        </FrameLayout>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:alpha=".3"-->
<!--            android:background="@drawable/sh_round_box"-->
<!--            android:backgroundTint="@color/Black" />-->

        <View
            android:layout_width="70dp"
            android:layout_height="7dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/sh_round_box"
            android:backgroundTint="@color/Grey" />

        <View
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/sh_round_box"
            android:backgroundTint="@color/GreyDark" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>