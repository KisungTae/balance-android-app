<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivChatMessageReceivedProfile"
        android:layout_width="@dimen/profile_image_medium_size"
        android:layout_height="@dimen/profile_image_medium_size"
        android:layout_gravity="top"
        android:contentDescription="@string/profile_image_description"
        android:src="@drawable/ic_baseline_account_circle" />

    <TextView
        android:id="@+id/tvChatMessageReceivedBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:background="@drawable/sh_chat_message_received_box"
        android:elevation="1dp"
        android:maxWidth="@dimen/chat_message_text_view_max_width"
        android:padding="10dp"
        android:text="this is fdfsdffsdffdfsdffsdffdfsdffsdffdfsdffsdf" />

    <TextView
        android:id="@+id/tvChatMessageReceivedCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="bottom"
        android:text="12:54 pm"
        android:textSize="@dimen/text_small_size" />
</LinearLayout>